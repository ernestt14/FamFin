<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Title Text "Add Account" -->
    <TextView
        android:id="@+id/textAddAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Account"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="77dp"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <!-- Subtitle Text "Choose A Name For Your Account" -->
    <TextView
        android:id="@+id/textChooseAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Your Account"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="131dp"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <!-- Username Label -->
    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#8c8c8c"
        android:textSize="18sp"
        android:layout_marginTop="222dp"
        android:layout_marginLeft="49dp" />

    <!-- Username Input Field -->
    <EditText
        android:id="@+id/editTextEmail1"
        android:layout_width="321dp"
        android:layout_height="54dp"
        android:layout_marginTop="247dp"
        android:layout_marginLeft="36dp"
        android:background="@android:color/white"
        android:hint="Enter Email"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:inputType="text" />

    <!-- Password Label -->
    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#8c8c8c"
        android:textSize="18sp"
        android:layout_marginTop="316dp"
        android:layout_marginLeft="49dp" />

    <!-- Password Input Field -->
    <EditText
        android:id="@+id/editTextPassword1"
        android:layout_width="321dp"
        android:layout_height="54dp"
        android:layout_marginTop="341dp"
        android:layout_marginLeft="36dp"
        android:background="@android:color/white"
        android:hint="Enter Password"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:inputType="textPassword" />

    <!-- Button Box (Green background with rounded corners for "Next") -->
    <RelativeLayout
        android:id="@+id/boxNext"
        android:layout_width="321dp"
        android:layout_height="54dp"
        android:layout_marginTop="392dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/rounded_green_bg">

        <!-- Next Button Text -->
        <TextView
            android:id="@+id/textNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- "Already have an account?" Text -->
    <TextView
        android:id="@+id/textAlreadyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login"
        android:textColor="#007BFF"
        android:textSize="16sp"
        android:layout_below="@id/boxNext"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:src="@drawable/logo21"
        android:layout_marginTop="751dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
